<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="exerciseViewModel"
            type="com.jordanhintze.workouttracker.ui.exercise.ExerciseViewModel" />

        <variable
            name="exercise"
            type="com.jordanhintze.workouttracker.model.Exercise" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/exercise_name_hint" />

        <EditText
            android:id="@+id/rep_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rep_number_hint" />

    </LinearLayout>
</layout>